<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".Fragment.BlankFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:layout_marginTop="100dp"
        android:textSize="18sp"
        android:textColor="#B03060"
        android:text="Do u LOVE me?   Do u LOVE me?   Do u LOVE me?  Do u LOVE me?" />

    <Button
        android:id="@+id/buttonA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="23dp"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textColor="@drawable/text_selector"
        android:background="@drawable/btna_selector"
        android:text="A:love u" />

    <Button
        android:id="@+id/buttonB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonA"
        android:layout_marginTop="25dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textColor="@drawable/text_selector"
        android:background="@drawable/btnb_selector"
        android:text="B: fuck u" />

    <Button
        android:id="@+id/buttonC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonB"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textColor="@drawable/text_selector"
        android:background="@drawable/btnc_selector"
        android:text="C: miss u" />

    <Button
        android:id="@+id/buttonD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_margin="20dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@drawable/text_selector"
        android:background="@drawable/btnd_selector"
        android:text="D: thank u" />


    <Button
        android:id="@+id/commit"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginBottom="36dp"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_backgrand"
        android:text="@string/commit" />


    <Button
        android:id="@+id/nextquestion"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_nextbg"
        android:text="@string/nextquestion" />

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_weight="0.1"
        android:background="#66CDAA"
        android:text="" />
</LinearLayout>